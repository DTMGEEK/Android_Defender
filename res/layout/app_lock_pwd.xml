<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <ImageView 
            android:id="@+id/app_lock_pwd_iv_icon"
            android:layout_width="@dimen/app_lock_pwd_iv_size"
            android:layout_height="@dimen/app_lock_pwd_iv_size"
            android:src="@drawable/ic_launcher"
            />
        
        <TextView 
            android:id="@+id/app_lock_pwd_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_lock_pwd_tv_text"
            />
        
    </LinearLayout>
    
    <EditText 
        android:id="@+id/app_lock_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button 
        android:id="@+id/app_lock_pwd_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_lock_pwd_bt_text"
        />
    

</LinearLayout>
